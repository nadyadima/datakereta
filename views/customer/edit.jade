extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Data Kereta
			small menu for editing customer data
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Level 
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Data Kereta
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/customers/edit/#{(id==undefined) ? data.id : id}')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Nama KA
									input(type='text',value="#{data.name}",name='nama',placeholder='Masukkan Nama KA', autofocus).form-control
								.form-group
									label
										| Rute
									input(type='text',value="#{ (email == undefined) ? data.email : email }",name='rute',placeholder='Masukkan Rute').form-control
								.form-group
									label
										| Berangkat
									input(type='text',value="#{ (address == undefined) ? data.address : address }",name='berangkat',placeholder='Masukkan Jam Berangkat').form-control
								.form-group
									label
										| Datang
									input(type='text',value="#{ (email == undefined) ? data.email : email }",name='datang',placeholder='Masukkan Jam Durasi').form-control
								.form-group
									label
										| Harga
									input(type='text',value="#{ (phone == undefined) ? data.phone : phone }",name='harga',placeholder='Masukkan Harga').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-warning
									i.fa.fa-pencil 
									|  Edit
								a(href='/customers').btn.btn-danger.pull-right
									| Back